{
    "info": {
        "name": "Secure Auth API",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
        "description": "Postman collection for Secure Authentication API with Role-Based Access and MFA."
    },
    "item": [
        {
            "name": "Register",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ],
                "url": {
                    "raw": "http://127.0.0.1:8000/api/auth/register/",
                    "protocol": "http",
                    "host": [
                        "127.0.0.1"
                    ],
                    "port": "8000",
                    "path": [
                        "api",
                        "auth",
                        "register"
                    ]
                },
                "body": {
                    "mode": "raw",
                    "raw": "{\n    \"username\": \"testuser\",\n    \"email\": \"test@example.com\",\n    \"password\": \"StrongPass123!\",\n    \"role\": \"user\"\n}"
                }
            }
        },
        {
            "name": "Login",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ],
                "url": {
                    "raw": "http://127.0.0.1:8000/api/auth/token/",
                    "protocol": "http",
                    "host": [
                        "127.0.0.1"
                    ],
                    "port": "8000",
                    "path": [
                        "api",
                        "auth",
                        "token"
                    ]
                },
                "body": {
                    "mode": "raw",
                    "raw": "{\n    \"username\": \"testuser\",\n    \"password\": \"StrongPass123!\"\n}"
                }
            }
        },
        {
            "name": "Refresh Token",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ],
                "url": {
                    "raw": "http://127.0.0.1:8000/api/auth/token/refresh/",
                    "protocol": "http",
                    "host": [
                        "127.0.0.1"
                    ],
                    "port": "8000",
                    "path": [
                        "api",
                        "auth",
                        "token",
                        "refresh"
                    ]
                },
                "body": {
                    "mode": "raw",
                    "raw": "{\n    \"refresh\": \"<your_refresh_token>\"\n}"
                }
            }
        },
        {
            "name": "Profile (Get)",
            "request": {
                "method": "GET",
                "header": [
                    {
                        "key": "Authorization",
                        "value": "Bearer <your_jwt_token>"
                    }
                ],
                "url": {
                    "raw": "http://127.0.0.1:8000/api/auth/profile/",
                    "protocol": "http",
                    "host": [
                        "127.0.0.1"
                    ],
                    "port": "8000",
                    "path": [
                        "api",
                        "auth",
                        "profile"
                    ]
                }
            }
        },
        {
            "name": "Enable MFA",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Authorization",
                        "value": "Bearer <your_jwt_token>"
                    }
                ],
                "url": {
                    "raw": "http://127.0.0.1:8000/api/auth/mfa/enable/",
                    "protocol": "http",
                    "host": [
                        "127.0.0.1"
                    ],
                    "port": "8000",
                    "path": [
                        "api",
                        "auth",
                        "mfa",
                        "enable"
                    ]
                }
            }
        },
        {
            "name": "Verify MFA Enable",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Authorization",
                        "value": "Bearer <your_jwt_token>",
                        "type": "text"
                    }
                ],
                "url": {
                    "raw": "http://127.0.0.1:8000/api/auth/mfa/verify-enable/",
                    "protocol": "http",
                    "host": [
                        "127.0.0.1"
                    ],
                    "port": "8000",
                    "path": [
                        "api",
                        "auth",
                        "mfa",
                        "verify-enable"
                    ]
                },
                "body": {
                    "mode": "raw",
                    "raw": "{\n    \"code\": \"123456\"\n}"
                }
            }
        },
        {
            "name": "Disable MFA",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Authorization",
                        "value": "Bearer <your_jwt_token>"
                    }
                ],
                "url": {
                    "raw": "http://127.0.0.1:8000/api/auth/mfa/disable/",
                    "protocol": "http",
                    "host": [
                        "127.0.0.1"
                    ],
                    "port": "8000",
                    "path": [
                        "api",
                        "auth",
                        "mfa",
                        "disable"
                    ]
                }
            }
        },
        {
            "name": "Forgot Password",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ],
                "url": {
                    "raw": "http://127.0.0.1:8000/api/auth/password/forgot/",
                    "protocol": "http",
                    "host": [
                        "127.0.0.1"
                    ],
                    "port": "8000",
                    "path": [
                        "api",
                        "auth",
                        "password",
                        "forgot"
                    ]
                },
                "body": {
                    "mode": "raw",
                    "raw": "{\n    \"email\": \"test@example.com\"\n}"
                }
            }
        },
        {
            "name": "Reset Password Confirm",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ],
                "url": {
                    "raw": "http://127.0.0.1:8000/api/auth/password/reset-confirm/<uid>/<token>/",
                    "protocol": "http",
                    "host": [
                        "127.0.0.1"
                    ],
                    "port": "8000",
                    "path": [
                        "api",
                        "auth",
                        "password",
                        "reset-confirm",
                        "<uid>",
                        "<token>"
                    ]
                },
                "body": {
                    "mode": "raw",
                    "raw": "{\n    \"password\": \"NewStrongPass123!\"\n}"
                }
            }
        },
        {
            "name": "Admin Only",
            "request": {
                "method": "GET",
                "header": [
                    {
                        "key": "Authorization",
                        "value": "Bearer <your_jwt_token>"
                    }
                ],
                "url": {
                    "raw": "http://127.0.0.1:8000/api/auth/admin-only/",
                    "protocol": "http",
                    "host": [
                        "127.0.0.1"
                    ],
                    "port": "8000",
                    "path": [
                        "api",
                        "auth",
                        "admin-only"
                    ]
                }
            }
        }
    ]
}